<div class="container">
<h2>Please sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "form-signin") do |f| %>
  <%= devise_error_messages! %>


  <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email address"%>

  <%= f.password_field :password, :autofocus => true, class: "form-control", class: "form-control", placeholder: "Password"%>

  <%= f.password_field :password_confirmation, :autofocus => true, class: "form-control", class: "form-control", placeholder: "Password confirmation"%>

  <div><%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"%></div>

<% end %>
  <center>
    <%= render "devise/shared/links" %>
  </center>
</div>

